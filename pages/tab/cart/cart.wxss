/* pages/tab/cart/cart.wxss */

.empty_cart {
    font-size: 26rpx;
    color: #666;
    text-align: center;
    padding-top: 200rpx;
}

.empty_cart image {
    width: 180rpx;
    height: 180rpx;
}

.cart-container {
    padding-bottom: 50px;
}

.desc {
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: absolute;
    bottom: 0;
    width: auto;
}

.stepper {
    margin-left: 156rpx;
}

.desc .price {
    color: red;
    font-weight: bold;
    font-size: 12px;
    width: 100rpx;
}

.thumb {
    display: flex;
    align-items: center;
    width: 118px;
}

.thumb image {
    width: 90px;
    height: 90px;
    margin-left: 8px;
}

.left-view {
    width: 118px !important
}

checkbox .wx-checkbox-input {
    border-radius: 50%;
}


/* 选中后的 背景样式 （红色背景 无边框 可根据UI需求自己修改） */

checkbox .wx-checkbox-input.wx-checkbox-input-checked {
    background: #d81e06;
}


/* 选中后的 对勾样式 （白色对勾 可根据UI需求自己修改） */

checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
    color: #fff;
    /* 对勾颜色 白色 */
}


/* 提交订单 */

.submit-bar {
    z-index: 100;
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    -webkit-user-select: none;
    user-select: none;
}

.submit-bar .submitbar-container {
    display: flex;
    align-items: center;
    height: 50px;
    background-color: #fff;
    font-size: 14px;
}

.submit-bar .submitbar-container .submit-text {
    flex: 1;
    color: #333;
    font-weight: 500;
    text-align: right;
    height: 50px;
    line-height: 50px;
}

.submit-bar .submitbar-container .submit-btn {
    width: 110px;
    height: 50px;
    line-height: 48px;
    color: #fff;
    background-color: #f44;
    border: 1px solid #f44;
    font-size: 16px;
    border-radius: 0;
    text-align: center;
    box-sizing: border-box;
}

.submit-bar .submit-text .price {
    color: #f44;
    font-size: 18px;
    padding-right: 12px;
}

.close {
    background-color: #ff4444;
    width: 65px;
    height: 100%;
    color: white;
    font-size: 13px;
    display: flex;
    justify-content: center;
    align-items: center;
}