.authorize {
    position: relative;
    width: 100%;
    height: 100%;
    text-align: center;
}

.authorize .logo {
    margin-top: 180rpx;
    width: 430rpx;
    height: 430rpx;
}

.authorize .login-type {
    position: absolute;
    width: 100%;
    bottom: 160rpx;
}

.authorize .login-type button {
    width: 130rpx;
    height: 130rpx;
    border-radius: 50%;
    border: 1px solid #aaa;
    background: url(https://ss1.bdstatic.com/70cFuXSh_Q1YnxGkpoWK1HF6hhy/it/u=3649629673,2264322674&fm=26&gp=0.jpg);
    background-size: 100% 100%
}

.authorize .desc {
    position: absolute;
    width: 100%;
    bottom: 30rpx;
    font-size: 26rpx;
    color: #aaa;
}

.authorize .desc a {
    text-decoration: underline;
}