.choose_address_box {
    text-align: center;
    padding: 60rpx 0;
}

.sep_line {
    height: 7px;
    width: 100%;
    display: block;
}

.address_box {
    font-size: 26rpx;
    padding: 0 10rpx;
}

.address_box .box1 {
    display: flex;
    justify-content: space-between;
    padding: 30rpx 0;
}

.address_box .box2 {
    padding-bottom: 30rpx;
}

.order_container {
    padding-bottom: 50px;
}


/* 提交订单 */

.submit-bar {
    z-index: 100;
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    -webkit-user-select: none;
    user-select: none;
}

.submit-bar .submitbar-container {
    display: flex;
    align-items: center;
    height: 50px;
    background-color: #fff;
    font-size: 14px;
}

.submit-bar .submitbar-container .submit-text {
    flex: 1;
    color: #333;
    font-weight: 500;
    text-align: right;
    height: 50px;
    line-height: 50px;
}

.submit-bar .submitbar-container .submit-btn {
    width: 110px;
    height: 50px;
    line-height: 48px;
    color: #fff;
    background-color: #f44;
    border: 1px solid #f44;
    font-size: 16px;
    border-radius: 0;
    text-align: center;
    box-sizing: border-box;
}

.submit-bar .submit-text .price {
    color: #f44;
    font-size: 18px;
    padding-right: 12px;
}