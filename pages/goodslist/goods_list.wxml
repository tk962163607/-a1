<!--pages/goodslist/goods_list.wxml-->
<view class="goods-list">
   <view class="card">
       <block wx:for="{{goodsListData}}" wx:key="index">
        <view class="item">
            <view class="left">
                <image class="left_img" src="{{item.goods_small_logo}}"/>
            </view>
            <view class="right">
                <view class="title">{{item.goods_name}}</view>
                <view class="bottom">
                    <view class="price">￥ {{item.goods_price}}</view>
                    <view class="num">x {{item.goods_number}}</view>
                </view>
            </view>
        </view>
    </block>
   </view>

   <!-- 数据加载完毕后的提示消息 -->
   <view class="over_line" hidden="{{!isover}}">-------- 我是有底线的 --------</view>
</view>
