@import "../../assets/wxParse/wxParse.wxss";
@import "../../assets/fontcss/index.wxss";
.goods_detail swiper {
    height: 750rpx;
}

.goods_detail swiper image {
    width: 100%;
    height: 100%;
}

.goods_info .sep_line {
    border-bottom: 15rpx solid #efefef;
}

.goods_info .box1 {
    padding: 0 10rpx;
}

.goods_info .box1 .price {
    font-size: 40rpx;
    color: red;
    margin: 20rpx 0;
}

.goods_info .box1 .goods_name {
    display: flex;
    justify-content: space-between;
}

.goods_info .box1 .left {
    font-size: 26rpx;
    padding-right: 40rpx;
}

.goods_info .box1 .right {
    width: 200rpx;
    text-align: center;
    border-left: 1rpx solid #eee;
}

.goods_info .box1 .right>view {
    font-size: 60rpx;
}

.goods_info .box1 .yunfei {
    font-size: 26rpx;
    color: #666;
    font-weight: bold;
    line-height: 80rpx;
}

.goods_info .box2 {
    font-size: 24rpx;
    padding: 0 10rpx;
}

.goods_info .box2>view {
    line-height: 80rpx;
}

.goods_info .box2>view text:nth-child(1) {
    margin-right: 20rpx;
}

.goods_info .box2>view text:nth-child(2) {
    color: #666;
}

.tab2 {
    font-size: 24rpx;
}

.tab2 .item {
    display: flex;
    border-top: 1rpx solid #eee;
    width: 100%;
    font-size: 26rpx;
    text-align: center;
}

.tab2 .item .name {
    padding: 25rpx 0 25rpx 10rpx;
    border-right: 1rpx solid #eee;
    flex: 1;
}

.tab2 .item .value {
    padding: 25rpx 0 25rpx 10rpx;
    flex: 1;
}

.van-tabs {
    z-index: 0;
}

.erweima-mask {
    position: fixed;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, .3);
    top: 0;
    left: 0;
}

.canvas {
    margin: 60rpx auto 0;
}

.show {
    display: block;
}

.erweima-mask .container {
    background-color: #fff;
    padding: 50rpx 0 150rpx 0;
    margin: 200rpx 50rpx 0 50rpx;
}

.hide {
    display: none;
}

.erweima-mask .hd {
    text-align: center;
    line-height: 50rpx;
}

.erweima-mask .hd .hd-top {
    font-size: 35rpx;
    font-weight: 700;
    color: #333;
}

.erweima-mask .hd .hd-bottom {
    font-size: 26rpx;
    color: #ccc;
}